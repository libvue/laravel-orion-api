{
  "useTabs": false,
  "tabWidth": 4,
  "printWidth": 120,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.js", "*.mjs", "*.ts"],
      "options": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "bracketSpacing": true,
        "bracketSameLine": false,
        "arrowParens": "always",
        "singleAttributePerLine": false
      }
    }
  ]
}
